<section class="entrepreneurs collage-section" data-section-id="{{ section.id }}" data-animate="entrepreneurs">
  <div class="container">
    <div class="entrepreneurs__wrapper">
      <div class="entrepreneurs__content animate-item animate-item--left" style="--i:0">
        <div class="entrepreneurs__badge collage-sticker collage-sticker--handwritten">
          {% render 'icon-heart' %}
          <span>Hecho en Mexico</span>
        </div>
        <h2 class="entrepreneurs__title">
          {{ section.settings.title | default: 'Detras de cada producto, hay una historia' }}
        </h2>
        <p class="entrepreneurs__subtitle">
          {{ section.settings.subtitle | default: 'Todos los productos que encuentras aqui son de emprendedores mexicanos que le ponen el corazon a lo que crean. Al elegirlos, apoyas suenos locales.' }}
        </p>
        <a href="{{ section.settings.cta_link | default: '/pages/creadores' }}" class="btn btn--secondary collage-button">
          {{ section.settings.cta_text | default: 'Conocer a los creadores' }}
          {% render 'icon-arrow-right' %}
        </a>
        <a href="#categories" class="btn btn--primary collage-button entrepreneurs__giftbox-cta">
          Listo para armar mi giftbox
          {% render 'icon-arrow-right' %}
        </a>
      </div>

      <div class="entrepreneurs__gallery">
        {%- for block in section.blocks -%}
          <div class="entrepreneur-card collage-polaroid collage-polaroid--{{ forloop.index | modulo: 3 | plus: 1 }} animate-item animate-item--drop" style="--i:{{ forloop.index | plus: 1 }}" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              <img
                src="{{ block.settings.image | image_url: width: 300 }}"
                alt="{{ block.settings.name | default: 'Emprendedor' }}"
                width="150"
                height="180"
                loading="lazy"
              >
            {%- else -%}
              <div class="entrepreneur-card__placeholder">
                {% render 'icon-user' %}
              </div>
            {%- endif -%}
            {%- if block.settings.name != blank -%}
              <span class="collage-polaroid__caption">{{ block.settings.name }}</span>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Emprendedores",
  "tag": "section",
  "class": "section-entrepreneurs",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titulo",
      "default": "Detras de cada producto, hay una historia"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitulo",
      "default": "Todos los productos que encuentras aqui son de emprendedores mexicanos que le ponen el corazon a lo que crean. Al elegirlos, apoyas suenos locales."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texto del boton",
      "default": "Conocer a los creadores"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Enlace del boton"
    }
  ],
  "blocks": [
    {
      "type": "entrepreneur",
      "name": "Emprendedor",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Foto"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Nombre",
          "default": "Maria"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Emprendedores",
      "blocks": [
        { "type": "entrepreneur", "settings": { "name": "Maria" } },
        { "type": "entrepreneur", "settings": { "name": "Carlos" } },
        { "type": "entrepreneur", "settings": { "name": "Ana" } }
      ]
    }
  ]
}
{% endschema %}
