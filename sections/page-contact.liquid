<section class="contact-page collage-section" data-section-id="{{ section.id }}" data-animate="stagger">

  <!-- Contact Hero -->
  <div class="contact-hero{% if section.settings.hero_image != blank %} contact-hero--has-bg{% endif %}">
    {%- if section.settings.hero_image != blank -%}
      <div class="contact-hero__bg">
        <img src="{{ section.settings.hero_image | image_url: width: 1920 }}" alt="" loading="eager" class="contact-hero__bg-image">
        <div class="contact-hero__overlay"></div>
      </div>
    {%- endif -%}
    <div class="contact-hero__content">
      <div class="contact-hero__tag sticker-badge animate-item" style="--i:0">
        {% render 'icon-email' %}
        <span>Contacto</span>
      </div>
      <h1 class="contact-hero__title animate-item" style="--i:1">
        {{ section.settings.headline | default: '¿Tienes dudas? Aquí andamos' }}
      </h1>
      <p class="contact-hero__subtitle animate-item" style="--i:2">
        {{ section.settings.subtitle | default: 'Ya sea que quieras preguntarnos algo sobre tu pedido, tengas una idea loca o simplemente quieras saludar, escríbenos. Prometemos contestar rápido (somos bien platicadores).' }}
      </p>
      <!-- Sticker decoration 1 -->
      {%- if section.settings.sticker_1 != blank -%}
        <div class="contact-hero__deco contact-sticker">
          <img src="{{ section.settings.sticker_1 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
        </div>
      {%- endif -%}
    </div>
  </div>

  <!-- Contact Content -->
  <div class="contact-content">
    <div class="container">
      <div class="contact-grid">

        <!-- Contact Info -->
        <div class="contact-info animate-item" style="--i:3">
          <!-- Sticker decoration 2 -->
          {%- if section.settings.sticker_2 != blank -%}
            <div class="contact-info__deco contact-sticker">
              <img src="{{ section.settings.sticker_2 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
            </div>
          {%- endif -%}
          <h2 class="contact-info__title">Contáctanos</h2>

          <div class="contact-info__list">
            <a href="https://wa.me/52{{ settings.social_whatsapp | remove: ' ' }}" class="contact-info__item" target="_blank" rel="noopener">
              <span class="contact-info__icon collage-sticker collage-sticker--small">
                {% render 'icon-whatsapp' %}
              </span>
              <span class="contact-info__content">
                <span class="contact-info__label">{{ section.settings.whatsapp_label | default: 'WhatsApp (La vía rápida)' }}</span>
                <span class="contact-info__value">{{ settings.social_whatsapp }}</span>
              </span>
              {% render 'icon-arrow-right' %}
            </a>

            <a href="mailto:{{ settings.contact_email }}" class="contact-info__item">
              <span class="contact-info__icon collage-sticker collage-sticker--small">
                {% render 'icon-email' %}
              </span>
              <span class="contact-info__content">
                <span class="contact-info__label">{{ section.settings.email_label | default: 'Email' }}</span>
                <span class="contact-info__value">{{ settings.contact_email }}</span>
              </span>
              {% render 'icon-arrow-right' %}
            </a>

            <div class="contact-info__item contact-info__item--static">
              <span class="contact-info__icon collage-sticker collage-sticker--small">
                {% render 'icon-clock' %}
              </span>
              <span class="contact-info__content">
                <span class="contact-info__label">{{ section.settings.hours_label | default: 'Horario de Atención' }}</span>
                <span class="contact-info__value">{{ settings.contact_hours }}</span>
              </span>
            </div>

            <div class="contact-info__item contact-info__item--static">
              <span class="contact-info__icon collage-sticker collage-sticker--small">
                {% render 'icon-location' %}
              </span>
              <span class="contact-info__content">
                <span class="contact-info__label">{{ section.settings.location_label | default: '¿Dónde estamos?' }}</span>
                <span class="contact-info__value">{{ section.settings.location_text | default: 'CDMX, México' }}</span>
              </span>
            </div>
          </div>

          <!-- Social Links -->
          <div class="contact-social">
            <h3 class="contact-social__title">{{ section.settings.social_title | default: 'Síguenos' }}</h3>
            <div class="contact-social__links">
              {%- if settings.social_instagram != blank -%}
                <a href="https://instagram.com/{{ settings.social_instagram | remove: '@' }}" target="_blank" rel="noopener" class="contact-social__link">
                  {% render 'icon-instagram' %}
                </a>
              {%- endif -%}
              {%- if settings.social_facebook != blank -%}
                <a href="https://facebook.com{{ settings.social_facebook }}" target="_blank" rel="noopener" class="contact-social__link">
                  {% render 'icon-facebook' %}
                </a>
              {%- endif -%}
              {%- if settings.social_tiktok != blank -%}
                <a href="https://tiktok.com/{{ settings.social_tiktok | remove: '@' }}" target="_blank" rel="noopener" class="contact-social__link">
                  {% render 'icon-tiktok' %}
                </a>
              {%- endif -%}
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="contact-form-wrapper animate-item" style="--i:4">
          <!-- Sticker decoration 3 -->
          {%- if section.settings.sticker_3 != blank -%}
            <div class="contact-form__deco contact-form__deco--left contact-sticker">
              <img src="{{ section.settings.sticker_3 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
            </div>
          {%- endif -%}
          <!-- Sticker decoration 4 -->
          {%- if section.settings.sticker_4 != blank -%}
            <div class="contact-form__deco contact-form__deco--right contact-sticker">
              <img src="{{ section.settings.sticker_4 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
            </div>
          {%- endif -%}
          <h2 class="contact-form__title">Escríbenos</h2>

          {% form 'contact', class: 'contact-form' %}
            {%- if form.posted_successfully? -%}
              <div class="contact-form__success">
                <span class="contact-form__success-icon collage-sticker">
                  {% render 'icon-check' %}
                </span>
                <p>¡Mensaje enviado! Te contestamos pronto.</p>
              </div>
            {%- endif -%}

            {%- if form.errors -%}
              <div class="contact-form__errors">
                {{ form.errors | default_errors }}
              </div>
            {%- endif -%}

            <div class="contact-form__row">
              <div class="contact-form__field">
                <label for="contact-name" class="contact-form__label">{{ section.settings.name_label | default: 'Nombre' }}</label>
                <input
                  type="text"
                  id="contact-name"
                  name="contact[{{ 'contact.form.name' | t }}]"
                  placeholder="{{ section.settings.name_placeholder | default: '¿Cómo te llamas?' }}"
                  required
                  class="contact-form__input"
                >
              </div>

              <div class="contact-form__field">
                <label for="contact-email" class="contact-form__label">{{ section.settings.email_form_label | default: 'Email' }}</label>
                <input
                  type="email"
                  id="contact-email"
                  name="contact[email]"
                  placeholder="{{ section.settings.email_placeholder | default: 'Tu correo para contestarte' }}"
                  required
                  class="contact-form__input"
                >
              </div>
            </div>

            <div class="contact-form__field">
              <label for="contact-subject" class="contact-form__label">{{ section.settings.subject_label | default: 'Asunto' }}</label>
              <input
                type="text"
                id="contact-subject"
                name="contact[{{ 'contact.form.subject' | t }}]"
                placeholder="{{ section.settings.subject_placeholder | default: '¿Sobre qué quieres platicar?' }}"
                class="contact-form__input"
              >
            </div>

            <div class="contact-form__field">
              <label for="contact-message" class="contact-form__label">{{ section.settings.message_label | default: 'Mensaje' }}</label>
              <textarea
                id="contact-message"
                name="contact[{{ 'contact.form.message' | t }}]"
                placeholder="{{ section.settings.message_placeholder | default: 'Cuéntanos, te leemos' }}"
                required
                rows="5"
                class="contact-form__textarea"
              ></textarea>
            </div>

            <button type="submit" class="contact-form__submit btn btn--primary">
              {{ section.settings.submit_text | default: 'Enviar mensaje' }}
              {% render 'icon-arrow-right' %}
            </button>
          {% endform %}
        </div>

      </div>
    </div>
  </div>

</section>

