<section class="faqs-page collage-section" data-section-id="{{ section.id }}" data-animate="stagger">

  <!-- FAQs Hero -->
  <div class="faqs-hero{% if section.settings.hero_image != blank %} faqs-hero--has-bg{% endif %}">
    {%- if section.settings.hero_image != blank -%}
      <div class="faqs-hero__bg">
        <img src="{{ section.settings.hero_image | image_url: width: 1920 }}" alt="" loading="eager" class="faqs-hero__bg-image">
        <div class="faqs-hero__overlay"></div>
      </div>
    {%- endif -%}
    <div class="faqs-hero__content">
      <div class="faqs-hero__tag sticker-badge animate-item" style="--i:0">
        {% render 'icon-confused' %}
        <span>Preguntas</span>
      </div>
      <h1 class="faqs-hero__title animate-item" style="--i:1">
        {{ section.settings.headline | default: 'Las dudas más comunes (y sus respuestas)' }}
      </h1>
      <p class="faqs-hero__subtitle animate-item" style="--i:2">
        {{ section.settings.subtitle | default: 'Si tu pregunta no está aquí, escríbenos por WhatsApp y te ayudamos al tiro.' }}
      </p>
      <!-- Sticker decoration 1 -->
      {%- if section.settings.sticker_1 != blank -%}
        <div class="faqs-hero__deco faqs-sticker">
          <img src="{{ section.settings.sticker_1 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
        </div>
      {%- endif -%}
    </div>
  </div>

  <!-- FAQ List -->
  <div class="faqs-content">
    <!-- Sticker decoration 2 -->
    {%- if section.settings.sticker_2 != blank -%}
      <div class="faqs-content__deco faqs-sticker">
        <img src="{{ section.settings.sticker_2 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
      </div>
    {%- endif -%}
    <div class="faqs-list">
      {%- for block in section.blocks -%}
        <div class="faqs-item collage-paper animate-item" style="--i:{{ forloop.index | plus: 2 }}" data-faq-item {{ block.shopify_attributes }}>
          <button class="faqs-item__header" data-faq-toggle aria-expanded="false">
            <span class="faqs-item__number">{{ forloop.index | prepend: '0' | slice: -2, 2 }}</span>
            <span class="faqs-item__question">{{ block.settings.question }}</span>
            <span class="faqs-item__icon">
              {% render 'icon-plus' %}
            </span>
          </button>
          <div class="faqs-item__body" data-faq-answer>
            <div class="faqs-item__answer">
              {{ block.settings.answer }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

  <!-- CTA Section -->
  <div class="faqs-cta animate-item" style="--i:0">
    <!-- Sticker decoration 3 -->
    {%- if section.settings.sticker_3 != blank -%}
      <div class="faqs-cta__deco faqs-cta__deco--left faqs-sticker">
        <img src="{{ section.settings.sticker_3 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
      </div>
    {%- endif -%}
    <!-- Sticker decoration 4 -->
    {%- if section.settings.sticker_4 != blank -%}
      <div class="faqs-cta__deco faqs-cta__deco--right faqs-sticker">
        <img src="{{ section.settings.sticker_4 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
      </div>
    {%- endif -%}
    <span class="faqs-cta__label sticker-badge">{{ section.settings.cta_title | default: '¿Tienes otra duda?' }}</span>
    <p class="faqs-cta__text">{{ section.settings.cta_text | default: 'Escríbenos por WhatsApp y te ayudamos' }}</p>
    <a href="https://wa.me/52{{ settings.social_whatsapp | remove: ' ' }}?text={{ section.settings.whatsapp_message | default: '¡Hola! Tengo una duda...' | url_encode }}" target="_blank" rel="noopener" class="btn btn--primary faqs-cta__btn">
      {% render 'icon-whatsapp' %}
      <span>Escribir por WhatsApp</span>
    </a>
  </div>

</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('[data-faq-item]');

    faqItems.forEach(item => {
      const toggle = item.querySelector('[data-faq-toggle]');
      const answer = item.querySelector('[data-faq-answer]');

      toggle.addEventListener('click', function() {
        const isExpanded = toggle.getAttribute('aria-expanded') === 'true';

        // Close all other items
        faqItems.forEach(otherItem => {
          const otherToggle = otherItem.querySelector('[data-faq-toggle]');
          const otherAnswer = otherItem.querySelector('[data-faq-answer]');
          otherToggle.setAttribute('aria-expanded', 'false');
          otherAnswer.style.maxHeight = null;
          otherItem.classList.remove('is-open');
        });

        // Toggle current item
        if (!isExpanded) {
          toggle.setAttribute('aria-expanded', 'true');
          answer.style.maxHeight = answer.scrollHeight + 'px';
          item.classList.add('is-open');
        }
      });
    });
  });
</script>

