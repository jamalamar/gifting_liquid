<section class="faqs-page" data-section-id="{{ section.id }}">

  <!-- FAQs Hero with Background -->
  {%- assign hero_image = section.settings.background_image -%}
  <div class="faqs-hero{% if hero_image %} faqs-hero--has-bg{% endif %}">
    {%- if hero_image -%}
      <div class="faqs-hero__bg">
        <img
          src="{{ hero_image | image_url: width: 1920 }}"
          alt="{{ section.settings.headline | default: 'Preguntas frecuentes' }}"
          loading="eager"
          class="faqs-hero__bg-image"
        >
        <div class="faqs-hero__overlay"></div>
      </div>
    {%- endif -%}
    <div class="container">
      <div class="faqs-hero__content">
        <div class="faqs-hero__tag collage-sticker collage-sticker--handwritten">
          {% render 'icon-confused' %}
          <span>Preguntas</span>
        </div>
        <h1 class="faqs-hero__title">
          {{ section.settings.headline | default: 'Las dudas más comunes (y sus respuestas)' }}
        </h1>
        <p class="faqs-hero__subtitle">
          {{ section.settings.subtitle | default: 'Si tu pregunta no está aquí, escríbenos por WhatsApp y te ayudamos al tiro.' }}
        </p>
        <div class="faqs-hero__count collage-sticker collage-sticker--small">
          {{ section.blocks.size }} preguntas
        </div>
      </div>
    </div>
  </div>

  <!-- FAQ List -->
  <div class="faqs-content">
    <div class="container">
      <div class="faqs-list">
        {%- for block in section.blocks -%}
          <div class="faqs-item" data-faq-item {{ block.shopify_attributes }}>
            <button class="faqs-item__header" data-faq-toggle aria-expanded="false">
              <span class="faqs-item__number">{{ forloop.index | prepend: '0' | slice: -2, 2 }}</span>
              <span class="faqs-item__question">{{ block.settings.question }}</span>
              <span class="faqs-item__icon">
                {% render 'icon-plus' %}
              </span>
            </button>
            <div class="faqs-item__body" data-faq-answer>
              <div class="faqs-item__answer">
                {{ block.settings.answer }}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="faqs-cta">
    <div class="container">
      <div class="faqs-cta__content">
        <div class="faqs-cta__icon collage-sticker collage-sticker--large">
          {% render 'icon-confused' %}
        </div>
        <h2 class="faqs-cta__title">{{ section.settings.cta_title | default: '¿Tienes otra duda?' }}</h2>
        <p class="faqs-cta__text">{{ section.settings.cta_text | default: 'Escríbenos por WhatsApp y te ayudamos' }}</p>
        <a href="https://wa.me/52{{ settings.social_whatsapp | remove: ' ' }}?text={{ section.settings.whatsapp_message | default: '¡Hola! Tengo una duda...' | url_encode }}" target="_blank" rel="noopener" class="btn btn--primary faqs-cta__btn">
          {% render 'icon-whatsapp' %}
          <span>Escribir por WhatsApp</span>
        </a>
      </div>
    </div>
    <div class="faqs-cta__deco">?</div>
  </div>

</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('[data-faq-item]');

    faqItems.forEach(item => {
      const toggle = item.querySelector('[data-faq-toggle]');
      const answer = item.querySelector('[data-faq-answer]');

      toggle.addEventListener('click', function() {
        const isExpanded = toggle.getAttribute('aria-expanded') === 'true';

        // Close all other items
        faqItems.forEach(otherItem => {
          const otherToggle = otherItem.querySelector('[data-faq-toggle]');
          const otherAnswer = otherItem.querySelector('[data-faq-answer]');
          otherToggle.setAttribute('aria-expanded', 'false');
          otherAnswer.style.maxHeight = null;
          otherItem.classList.remove('is-open');
        });

        // Toggle current item
        if (!isExpanded) {
          toggle.setAttribute('aria-expanded', 'true');
          answer.style.maxHeight = answer.scrollHeight + 'px';
          item.classList.add('is-open');
        }
      });
    });
  });
</script>

