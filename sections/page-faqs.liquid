<section class="page-faqs collage-section" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="page-faqs__hero">
      <h1 class="page-faqs__headline collage-heading">
        {{ section.settings.headline | default: 'Las dudas mas comunes (y sus respuestas)' }}
      </h1>
      <p class="page-faqs__subtitle">
        {{ section.settings.subtitle | default: 'Si tu pregunta no esta aqui, escribenos por WhatsApp y te ayudamos al tiro.' }}
      </p>
    </div>

    <div class="page-faqs__content">
      <div class="faqs-list collage-paper collage-paper--large">
        <div class="faqs-list__tape collage-element collage-element--tape"></div>

        {%- for block in section.blocks -%}
          <div class="faq-item collage-card collage-card--faq" data-faq-item {{ block.shopify_attributes }}>
            <button class="faq-item__question" data-faq-toggle aria-expanded="false">
              <span class="faq-item__question-text">{{ block.settings.question }}</span>
              <span class="faq-item__icon collage-sticker collage-sticker--small">
                {% render 'icon-plus' %}
              </span>
            </button>
            <div class="faq-item__answer" data-faq-answer>
              <div class="faq-item__answer-inner">
                {{ block.settings.answer }}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>

      <div class="page-faqs__cta collage-paper collage-paper--note collage-paper--accent">
        <div class="page-faqs__cta-pin collage-pin"></div>
        <h2 class="page-faqs__cta-title">{{ section.settings.cta_title | default: '¿Tienes otra duda?' }}</h2>
        <p class="page-faqs__cta-text">{{ section.settings.cta_text | default: 'Escribenos por WhatsApp y te ayudamos' }}</p>
        <a href="https://wa.me/52{{ settings.social_whatsapp | remove: ' ' }}?text={{ section.settings.whatsapp_message | default: '¡Hola! Tengo una duda...' | url_encode }}" target="_blank" rel="noopener" class="btn btn--primary collage-button">
          {% render 'icon-whatsapp' %}
          <span>Escribir por WhatsApp</span>
        </a>
      </div>
    </div>
  </div>

  <div class="page-faqs__decorations">
    <div class="collage-element collage-element--question-mark faqs-question-1">?</div>
    <div class="collage-element collage-element--question-mark faqs-question-2">?</div>
    <div class="collage-element collage-element--doodle faqs-doodle">
      <svg viewBox="0 0 60 60">
        <circle cx="30" cy="30" r="25" fill="none" stroke="currentColor" stroke-width="2" stroke-dasharray="8,4"/>
      </svg>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('[data-faq-item]');

    faqItems.forEach(item => {
      const toggle = item.querySelector('[data-faq-toggle]');
      const answer = item.querySelector('[data-faq-answer]');

      toggle.addEventListener('click', function() {
        const isExpanded = toggle.getAttribute('aria-expanded') === 'true';

        faqItems.forEach(otherItem => {
          const otherToggle = otherItem.querySelector('[data-faq-toggle]');
          const otherAnswer = otherItem.querySelector('[data-faq-answer]');
          otherToggle.setAttribute('aria-expanded', 'false');
          otherAnswer.style.maxHeight = null;
          otherItem.classList.remove('is-open');
        });

        if (!isExpanded) {
          toggle.setAttribute('aria-expanded', 'true');
          answer.style.maxHeight = answer.scrollHeight + 'px';
          item.classList.add('is-open');
        }
      });
    });
  });
</script>

