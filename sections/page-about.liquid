<section class="page-about collage-section" data-section-id="{{ section.id }}" data-animate="stagger">

  <!-- Hero Section -->
  <div class="about-hero">
    <div class="about-hero__content">
      <div class="about-hero__tag sticker-badge animate-item" style="--i:0">
        {% render 'icon-heart' %}
        <span>Nosotros</span>
      </div>
      <h1 class="about-hero__headline animate-item" style="--i:1">
        {{ section.settings.hero_title | default: '¿Qué es Gifting?' }}
      </h1>
      <p class="about-hero__tagline animate-item" style="--i:2">
        {{ section.settings.hero_tagline | default: 'Somos el punto de encuentro entre quien quiere regalar algo especial y quien lo sabe crear.' }}
      </p>
      <!-- Sticker decoration 1 -->
      {%- if section.settings.sticker_1 != blank -%}
        <div class="about-hero__deco about-sticker">
          <img src="{{ section.settings.sticker_1 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
        </div>
      {%- endif -%}
    </div>
    <div class="about-hero__image animate-item" style="--i:2">
      {%- if section.settings.hero_image != blank -%}
        <div class="about-hero__image-wrapper collage-photo">
          <img src="{{ section.settings.hero_image | image_url: width: 800 }}" alt="Gifting Marketplace" loading="eager">
          <div class="about-hero__tape collage-tape"></div>
        </div>
      {%- else -%}
        <div class="about-hero__image-wrapper collage-photo about-hero__placeholder">
          <div class="image-placeholder">
            {% render 'icon-gift' %}
            <span>Hero Image</span>
          </div>
          <div class="about-hero__tape collage-tape"></div>
        </div>
      {%- endif -%}
    </div>
  </div>

  <!-- Value Propositions Section -->
  <div class="about-props">
    <!-- Sticker decoration 2 -->
    {%- if section.settings.sticker_2 != blank -%}
      <div class="about-props__deco about-sticker">
        <img src="{{ section.settings.sticker_2 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
      </div>
    {%- endif -%}

    <div class="about-props__grid">
      <!-- Card 1: Para los clientes -->
      <div class="about-props__card animate-item" style="--i:0">
        <div class="about-props__image">
          {%- if section.settings.clients_image != blank -%}
            <img src="{{ section.settings.clients_image | image_url: width: 400 }}" alt="Para los clientes" loading="lazy">
          {%- else -%}
            <div class="image-placeholder">
              {% render 'icon-user' %}
              <span>Imagen</span>
            </div>
          {%- endif -%}
        </div>
        <div class="about-props__content">
          <h3 class="about-props__title">Para los clientes</h3>
          <p class="about-props__text">
            {{ section.settings.clients_text | default: 'Resolvemos el problema de no saber qué regalar o no tener tiempo para buscar. Acercamos marcas únicas que normalmente solo encontrarían en marketplaces, pero ahora disponibles siempre en un solo lugar.' }}
          </p>
        </div>
      </div>

      <!-- Card 2: Para los emprendedores -->
      <div class="about-props__card animate-item" style="--i:1">
        <div class="about-props__image">
          {%- if section.settings.entrepreneurs_image != blank -%}
            <img src="{{ section.settings.entrepreneurs_image | image_url: width: 400 }}" alt="Para los emprendedores" loading="lazy">
          {%- else -%}
            <div class="image-placeholder">
              {% render 'icon-sparkle' %}
              <span>Imagen</span>
            </div>
          {%- endif -%}
        </div>
        <div class="about-props__content">
          <h3 class="about-props__title">Para los emprendedores</h3>
          <p class="about-props__text">
            {{ section.settings.entrepreneurs_text | default: 'Somos un punto de venta digital abierto 24/7, que convierte sus productos en parte de una experiencia de regalo fácil y práctica. Impulsamos su marca con exposición constante mediante creadores de contenido reconocidos que promueven el consumo local.' }}
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Target Audience Section -->
  <div class="about-audience">
    <!-- Sticker decoration 3 -->
    {%- if section.settings.sticker_3 != blank -%}
      <div class="about-audience__deco about-sticker">
        <img src="{{ section.settings.sticker_3 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
      </div>
    {%- endif -%}

    <h2 class="about-audience__title section-title collage-heading animate-item" style="--i:0">
      ¿Para quién somos?
    </h2>
    <div class="about-audience__grid">
      <!-- Personas -->
      <div class="about-audience__card animate-item" style="--i:1">
        <div class="about-audience__image">
          {%- if section.settings.personas_image != blank -%}
            <img src="{{ section.settings.personas_image | image_url: width: 400 }}" alt="Personas" loading="lazy">
          {%- else -%}
            <div class="image-placeholder">
              {% render 'icon-heart' %}
              <span>Imagen</span>
            </div>
          {%- endif -%}
        </div>
        <h3 class="about-audience__name">Personas</h3>
        <p class="about-audience__desc">
          {{ section.settings.personas_text | default: 'Que buscan un regalo para cualquier ser querido en cualquier ocasión y quieren hacerlo de una forma rápida, sencilla, con productos personalizados y de calidad.' }}
        </p>
      </div>

      <!-- Marcas locales -->
      <div class="about-audience__card animate-item" style="--i:2">
        <div class="about-audience__image">
          {%- if section.settings.marcas_image != blank -%}
            <img src="{{ section.settings.marcas_image | image_url: width: 400 }}" alt="Marcas locales" loading="lazy">
          {%- else -%}
            <div class="image-placeholder">
              {% render 'icon-sparkle' %}
              <span>Imagen</span>
            </div>
          {%- endif -%}
        </div>
        <h3 class="about-audience__name">Marcas locales</h3>
        <p class="about-audience__desc">
          {{ section.settings.marcas_text | default: 'Que buscan un canal de venta permanente, con menor costo por exposición y menor inversión de tiempo.' }}
        </p>
      </div>
    </div>
  </div>

  <!-- Summary Section -->
  <div class="about-summary animate-item" style="--i:0">
    <!-- Sticker decoration 4 -->
    {%- if section.settings.sticker_4 != blank -%}
      <div class="about-summary__deco about-sticker">
        <img src="{{ section.settings.sticker_4 | image_url: width: 150 }}" alt="Decoration" loading="lazy">
      </div>
    {%- endif -%}

    <span class="about-summary__label sticker-badge">En pocas palabras</span>
    <p class="about-summary__text">
      {{ section.settings.summary_text | default: 'Gifting es el marketplace que vive en línea, todos los días del año.' }}
    </p>
  </div>

</section>

