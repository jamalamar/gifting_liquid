        },
        {
          "type": "textarea",
          "id": "story",
          "label": "Historia (opcional)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace a productos"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pagina de Creadores",
      "blocks": [
        { "type": "creator", "settings": { "name": "Marca Ejemplo 1", "tagline": "Productos artesanales con amor" } },
        { "type": "creator", "settings": { "name": "Marca Ejemplo 2", "tagline": "Diseño mexicano contemporaneo" } },
        { "type": "creator", "settings": { "name": "Marca Ejemplo 3", "tagline": "Tradicion y modernidad" } }
      ]
    }
  ]
