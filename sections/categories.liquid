<section id="categories" class="categories collage-section" data-section-id="{{ section.id }}" data-animate="stagger">
  <div class="container">
    <div class="section-header animate-item" style="--i:0">
      <h2 class="section-title">{{ section.settings.title | default: '¿Para quién es este gifting?' }}</h2>
      <p class="section-subtitle">{{ section.settings.subtitle | default: 'Dinos quien se merece ese detalle y te ayudamos a encontrar el regalo ideal.' }}</p>
    </div>

    <div class="categories__grid">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link | default: '#' }}" class="category-card animate-item" style="--i:{{ forloop.index }}" {{ block.shopify_attributes }}>
          <div class="category-card__inner">
            <div class="category-card__image-wrapper">
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 600 }}"
                  alt="{{ block.settings.name }}"
                  width="400"
                  height="500"
                  loading="lazy"
                  class="category-card__image"
                >
              {%- else -%}
                <div class="category-card__placeholder">
                  {% render 'icon-gift' %}
                </div>
              {%- endif -%}
              <span class="category-card__label">
                {%- if block.settings.name contains 'ella' or block.settings.name contains 'Ella' -%}
                  {% render 'icon-heart' %}
                {%- else -%}
                  {% render 'icon-sparkle' %}
                {%- endif -%}
                {{ block.settings.name }}
              </span>
              <div class="category-card__sticker">
                {% render 'icon-arrow-right' %}
              </div>
            </div>
            <div class="category-card__content">
              <h3 class="category-card__name">{{ block.settings.name }}</h3>
              <p class="category-card__tagline">{{ block.settings.tagline }}</p>
            </div>
          </div>
        </a>
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all -%}
      <div class="categories__footer animate-item" style="--i:{{ section.blocks.size | plus: 1 }}">
        <a href="{{ section.settings.view_all_link | default: routes.all_products_collection_url }}" class="btn btn--secondary collage-button">
          {{ section.settings.view_all_text | default: 'Ver todas las categorias' }}
        </a>
      </div>
    {%- endif -%}
  </div>

  <div class="categories__decorations">
    <div class="collage-element collage-element--doodle categories-doodle-1">
      <svg viewBox="0 0 100 100">
        <circle cx="50" cy="50" r="45" fill="none" stroke="currentColor" stroke-width="2" stroke-dasharray="10,5"/>
      </svg>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Categorias por persona",
  "tag": "section",
  "class": "section-categories",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titulo",
      "default": "¿Para quién es este gifting?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitulo",
      "default": "Dinos quien se merece ese detalle y te ayudamos a encontrar el regalo ideal."
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Mostrar boton ver todo",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Texto del boton",
      "default": "Ver todas las categorias"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Enlace del boton"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Categoria",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Nombre",
          "default": "Para mi novia"
        },
        {
          "type": "text",
          "id": "tagline",
          "label": "Tagline",
          "default": "Porque ella merece mas que flores"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Categorias por persona",
      "blocks": [
        { "type": "category", "settings": { "name": "Para El", "tagline": "Regalos que lo sorprenderan" } },
        { "type": "category", "settings": { "name": "Para Ella", "tagline": "Detalles que la haran sonreir" } },
        { "type": "category", "settings": { "name": "Para Todos", "tagline": "Opciones para cualquier persona" } }
      ]
    }
  ]
}
{% endschema %}
