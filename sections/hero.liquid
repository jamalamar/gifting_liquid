<section class="hero collage-section" data-section-id="{{ section.id }}" data-animate="hero">
  <div class="container">
    <div class="hero__content">
      <div class="hero__text">
        <span class="hero__tag sticker-badge animate-item" style="--i:0">{{ section.settings.tag | default: 'Elige, personaliza y regala' }}</span>
        <h1 class="hero__headline animate-item" style="--i:1">
          {{ section.settings.headline | default: 'El regalo perfecto sí existe. Y está aquí.' }}
        </h1>
        <p class="hero__subheadline animate-item" style="--i:2">
          {{ section.settings.subheadline | default: 'Arma cajas de regalo únicas con productos de emprendedores locales. Tú eliges, nosotros lo hacemos realidad.' }}
        </p>
        <div class="hero__cta animate-item" style="--i:3">
          <a href="{{ section.settings.cta_link | default: routes.all_products_collection_url }}" class="btn btn--primary btn--large">
            {{ section.settings.cta_text | default: 'Empezar a armar mi regalo' }}
            {% render 'icon-arrow-right' %}
          </a>
        </div>
      </div>

      <div class="hero__visual animate-item" style="--i:2">
        {%- if section.blocks.size > 0 -%}
          <div class="hero__carousel" data-hero-carousel>
            <div class="hero__carousel-track">
              {%- for block in section.blocks -%}
                {%- if block.type == 'slide' -%}
                  <div class="hero__slide {% if forloop.first %}is-active{% endif %}" data-slide="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
                    {%- if block.settings.image != blank -%}
                      <img
                        src="{{ block.settings.image | image_url: width: 800 }}"
                        srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                                {{ block.settings.image | image_url: width: 600 }} 600w,
                                {{ block.settings.image | image_url: width: 800 }} 800w"
                        sizes="(max-width: 749px) 100vw, 50vw"
                        alt="{{ block.settings.title | default: block.settings.image.alt | default: 'Gift box' }}"
                        width="500"
                        height="625"
                        loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                        class="hero__slide-image"
                      >
                    {%- else -%}
                      <div class="hero__slide-placeholder">
                        {% render 'icon-gift-box' %}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.title != blank -%}
                      <span class="hero__slide-label sticker-badge sticker-badge--primary">{{ block.settings.title }}</span>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>

            {%- if section.blocks.size > 1 -%}
              <div class="hero__carousel-dots">
                {%- for block in section.blocks -%}
                  {%- if block.type == 'slide' -%}
                    <button
                      class="hero__dot {% if forloop.first %}is-active{% endif %}"
                      data-slide-to="{{ forloop.index0 }}"
                      aria-label="Ir al slide {{ forloop.index }}"
                    ></button>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            {%- endif -%}
          </div>
        {%- else -%}
          {%- comment -%} Fallback if no slides configured {%- endcomment -%}
          <div class="hero__carousel-placeholder">
            <div class="hero__slide-placeholder">
              {% render 'icon-gift-box' %}
              <span class="hero__slide-label sticker-badge">Agrega imágenes</span>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>

  <div class="hero__scroll-indicator animate-item" style="--i:5">
    <span>Scroll</span>
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M19 12l-7 7-7-7"/>
    </svg>
  </div>

  {%- comment -%} Decorative elements {%- endcomment -%}
  <div class="hero__decorations">
    <div class="collage-element collage-element--star hero-star-1">
      <svg viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
      </svg>
    </div>
    <div class="collage-element collage-element--dot hero-dot-1"></div>
    <div class="collage-element collage-element--dot hero-dot-2"></div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Carousel",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "text",
      "id": "tag",
      "label": "Etiqueta",
      "default": "Elige, personaliza y regala"
    },
    {
      "type": "textarea",
      "id": "headline",
      "label": "Título principal",
      "default": "El regalo perfecto sí existe. Y está aquí."
    },
    {
      "type": "textarea",
      "id": "subheadline",
      "label": "Subtítulo",
      "default": "Arma cajas de regalo únicas con productos de emprendedores locales. Tú eliges, nosotros lo hacemos realidad."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texto del botón",
      "default": "Empezar a armar mi regalo"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Enlace del botón"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Velocidad del carrusel (segundos)",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 4,
      "unit": "s"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Etiqueta del slide",
          "info": "Texto que aparece sobre la imagen (ej: 'Caja del mes')"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Carousel",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "title": "Caja del mes"
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "Edición especial"
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "Para ella"
          }
        }
      ]
    }
  ]
}
{% endschema %}
