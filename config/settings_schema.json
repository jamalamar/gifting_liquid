      },
      {
        "type": "text",
        "id": "shipping_cost",
        "label": "Costo de envio estandar",
        "default": "150"
      },
      {
        "type": "text",
        "id": "express_shipping_cost",
        "label": "Costo de envio express",
        "default": "250"
      }
    ]
  },
  {
    "name": "Estilo collage",
    "settings": [
      {
        "type": "header",
        "content": "Elementos decorativos"
      },
      {
        "type": "checkbox",
        "id": "show_collage_elements",
        "label": "Mostrar elementos de collage",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_paper_textures",
        "label": "Mostrar texturas de papel",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_tape_elements",
        "label": "Mostrar elementos de cinta adhesiva",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_sticker_effects",
        "label": "Mostrar efectos de sticker",
        "default": true
      },
      {
        "type": "range",
        "id": "collage_rotation_max",
        "label": "Rotacion maxima de elementos",
        "min": 0,
        "max": 15,
        "step": 1,
        "default": 5,
        "unit": "deg"
      }
    ]
