      {
        "type": "text",
        "id": "social_facebook",
        "label": "Facebook",
        "default": "/giftingMX"
      },
      {
        "type": "text",
        "id": "social_tiktok",
        "label": "TikTok",
        "default": "@gifting.mx"
      },
      {
        "type": "text",
        "id": "social_whatsapp",
