      {
        "type": "font_picker",
        "id": "font_accent",
        "label": "Fuente de acento (handwritten)",
        "default": "pacifico_n4"
      }
    ]
  },
  {
    "name": "Logo y branding",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo principal"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Ancho del logo",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 150,
        "unit": "px"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      }
    ]
  },
  {
    "name": "Redes sociales",
    "settings": [
      {
        "type": "text",
        "id": "social_instagram",
