  {
    "name": "Tipografias",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Fuente de titulos",
        "default": "playfair_display_n4"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Fuente de cuerpo",
        "default": "work_sans_n4"
