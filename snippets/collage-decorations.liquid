{%- comment -%}
  Configurable global decorations - renders images from theme settings
{%- endcomment -%}

<div class="collage-decorations" aria-hidden="true">
  {%- if settings.deco_1_image != blank -%}
    <div class="global-deco global-deco--{{ settings.deco_1_position | default: 'top-right' }}" style="--deco-size: {{ settings.deco_1_size | default: 50 }}px;">
      <img src="{{ settings.deco_1_image | image_url: width: 240 }}" alt="" loading="lazy">
    </div>
  {%- endif -%}

  {%- if settings.deco_2_image != blank -%}
    <div class="global-deco global-deco--{{ settings.deco_2_position | default: 'bottom-left' }}" style="--deco-size: {{ settings.deco_2_size | default: 40 }}px; animation-delay: 1.5s;">
      <img src="{{ settings.deco_2_image | image_url: width: 240 }}" alt="" loading="lazy">
    </div>
  {%- endif -%}

  {%- if settings.deco_3_image != blank -%}
    <div class="global-deco global-deco--{{ settings.deco_3_position | default: 'top-left' }}" style="--deco-size: {{ settings.deco_3_size | default: 60 }}px; animation-delay: 3s;">
      <img src="{{ settings.deco_3_image | image_url: width: 240 }}" alt="" loading="lazy">
    </div>
  {%- endif -%}

  {%- if settings.deco_4_image != blank -%}
    <div class="global-deco global-deco--{{ settings.deco_4_position | default: 'bottom-right' }}" style="--deco-size: {{ settings.deco_4_size | default: 40 }}px; animation-delay: 4.5s;">
      <img src="{{ settings.deco_4_image | image_url: width: 240 }}" alt="" loading="lazy">
    </div>
  {%- endif -%}
</div>
